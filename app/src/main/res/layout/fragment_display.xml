<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/displayBackgroundColor"
    android:elevation="4dp"
    tools:context="com.github.laszlo1337.calculator.view.CalculatorDisplayFragment">

    <TextView
        android:id="@+id/display_rpn_mode_indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rpn_indicator_height"
        android:paddingTop="2dp"
        android:paddingLeft="8dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification"
        android:textColor="@color/displayDigitsColor" />

    <ScrollView
        android:id="@+id/calculatorDisplay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/display_scrollview_height">

        <TextView
            android:id="@+id/display_textview"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/display_textview_height"
            android:layout_gravity="end"
            android:paddingLeft="@dimen/standard_margin"
            android:paddingRight="@dimen/standard_margin"
            android:textAlignment="textEnd"
            android:textColor="@color/displayDigitsColor"
            android:textSize="56sp"
            tools:text="7+13+19" />

    </ScrollView>

</RelativeLayout>
